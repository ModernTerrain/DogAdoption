@using DogAdoption.Models
@using DogAdoption.Services
@using Microsoft.EntityFrameworkCore
@inject NavigationManager Navigation
@inject IDbContextFactory<DogAdoption.Data.DogAdoptionContext> DbFactory
@rendermode InteractiveServer

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">DogAdoption</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dogs">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> View Dogs
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="userforms">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Create Adoption Form
            </NavLink>
        </div>

        @if (UserService.GetCurrentUserAsync() == null)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="users/register">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Register
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="users/login">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Login
                </NavLink>
            </div>
        }

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="about">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> About
            </NavLink>
        </div>

        @if(UserService.GetCurrentUserAsync() != null){
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/messages/create">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Send Feeback
            </NavLink>
        </div>
        }

        @if(UserService.GetCurrentUserAsync() != null && UserService.GetCurrentUserAsync().isAdmin)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/messages">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> View Feedback
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/forms">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Pending Applications
                </NavLink>
            </div>

        }

        @if (UserService.GetCurrentUserAsync() != null)
        {
            <div class="nav-item px-3">
                <button class="nav-link" @onclick="Logout">Logout</button>
            </div>
        }
    </nav>
</div>

@code {

    private string error = "Not yet!";

    private void Logout()
    {
      error = "Got here!";
        UserService.LogoutAsync();

        Navigation.NavigateTo("/");
    }
}

